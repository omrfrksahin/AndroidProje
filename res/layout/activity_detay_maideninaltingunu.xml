<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DetayActivityMaideninaltingunu">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/baslikgradient"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="MAİDENİN ALTIN GÜNÜ"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/maideninaltingunuy"
                android:adjustViewBounds="true"
                android:id="@+id/DetayImgMaideninaltingunu"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/baslikgradient"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/DetayHakkındaMaideninaltingunu"
                android:text="HAKKINDA"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/DetayAçıklamaMaideninaltingunu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Altın günlerinin şaşaalı ismi Maide teyze, titizliği ve marifetleri ile ünlü bir ev kadınıdır. Mahallenin en havalı altın günlerini yapmasıyla meşhur olan Maide teyzenin geniş de bir gün arkadaşı ağı vardır. Ancak günün birinde, arkadaşlarından şüphe etmesine sebep olacak bir olay başına gelir; altın günlerinden birinde Maide'nin aile yadigarı gerdanlığı çalınır. Gerdanlığı bulmak için işe koyulan Maide, İstanbul dışından gelen ergen yeğeni Yağmur ile bir liste yapar. İkili, güne gelen kadınların tek tek peşine düşecek ve hırsızı bulacaktır..." />

            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/baslikgradient"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/DetayOyuncularMaideninaltingunu"
                android:text="OYUNCULAR"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:id="@+id/DetayOyuncularResimMaideninaltingunu"
                android:textColor="#000000"
                android:text="Ezgi Mola, Mesut Can Tomay, Hilmi Özçelik"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/baslikgradient"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/DetayVideoMaideninaltingunu"
                android:text="VİDEO"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>