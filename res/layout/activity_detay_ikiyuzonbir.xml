<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DetayActivityIkiyuzonbir">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/baslikgradient"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="211"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ikiyuzonbiry"
                android:adjustViewBounds="true"
                android:id="@+id/DetayImgIkiyuzonbir"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/baslikgradient"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/DetayHakkındaIkiyuzonbir"
                android:text="HAKKINDA"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/DetayAçıklamaIkiyuzonbir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="İsmini Kaliforniya eyaletinin hırsızlık ihbarı için kullandığı polis kodu 211'den alan aksiyon filmi, polis teşkilatı tarihindeki en uzun ve en kanlı gerçek hikayelerden birini esin kaynağı olarak alıyor. Memur Mike Chandler ve genç bir sivil yolcu kendilerini oldukça talihsiz bir konumda bulur. İkili, eğitimli ve ağır silahlı erkeklerden oluşan korkusuz bir hırsız çetesinin giriştiği cüretkar bir banka soygununun ortasında kalır. Duruma karşı tamamen hazırlıksız ve savunmasız olan ikili nasıl hayatta kalacaktır?" />

            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/baslikgradient"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/DetayOyuncularIkiyuzonbir"
                android:text="OYUNCULAR"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:id="@+id/DetayOyuncularResimIkiyuzonbir"
                android:textColor="#000000"
                android:text="Velizar Binev, Nicolas Cage, Dwayne Cameron"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/baslikgradient"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:id="@+id/DetayVideoIkiyuzonbir"
                android:text="VİDEO"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>